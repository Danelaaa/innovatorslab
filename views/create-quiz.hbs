<link rel="stylesheet" href="/style/create-quiz.css">

<h1>Create Quiz</h1>

<form action="/create-quiz" method="POST" id="quizForm">
    <label>Quiz Title:</label><br>
    <input type="text" name="title" required><br><br>

    <div id="questionsContainer"></div>

    <button type="submit">Create Quiz</button>
</form>

<script>
// Build 10 questions dynamically with JavaScript
const questionsContainer = document.getElementById('questionsContainer');

for (let qIndex = 0; qIndex < 10; qIndex++) {
    const fieldset = document.createElement('fieldset');

    const legend = document.createElement('legend');
    legend.textContent = `Question ${qIndex + 1}`;
    fieldset.appendChild(legend);

    const questionInput = document.createElement('input');
    questionInput.type = 'text';
    questionInput.name = 'questions[]';
    questionInput.placeholder = 'Enter question';
    questionInput.required = true;
    fieldset.appendChild(questionInput);
    fieldset.appendChild(document.createElement('br'));
    fieldset.appendChild(document.createElement('br'));

    for (let aIndex = 0; aIndex < 4; aIndex++) {
        const label = document.createElement('label');

        const radio = document.createElement('input');
        radio.type = 'radio';
        radio.name = `correct_answers_${qIndex}`;
        radio.value = aIndex;
        radio.required = true;
        label.appendChild(radio);

        const answerInput = document.createElement('input');
        answerInput.type = 'text';
        answerInput.name = `answers_${qIndex}[]`;
        answerInput.placeholder = 'Answer option';
        answerInput.required = true;
        label.appendChild(answerInput);

        fieldset.appendChild(label);
        fieldset.appendChild(document.createElement('br'));
        fieldset.appendChild(document.createElement('br'));
    }

    questionsContainer.appendChild(fieldset);
}
</script>
