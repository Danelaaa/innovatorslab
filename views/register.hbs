<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,100..900;1,100..900&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="style/register.css">
    <title>Library</title>
</head>
<body>
    <div class="container">
    <div class="left">
        <h5>Create your account</h5>
        <form id="registerForm" action="/register" method="post">
            <!-- Name -->
            <div class="left_input_div">
                <input type="text" class="form-control" id="name" name="name" placeholder="Name" required>
            </div>

            <!-- Surname -->
            <div class="left_input_div">
                <input type="text" class="form-control" id="surname" name="surname" placeholder="Surname" required>
            </div>

            <!-- Email -->
            <div class="left_input_div">
                <input type="email" class="form-control" id="email" name="email" placeholder="E-mail" required>
            </div>

            <!-- Password -->
            <div class="left_input_div">
                <input type="password" class="form-control" id="password" name="password" placeholder="Password" required>
            </div>

            <!-- Confirm Password -->
            <div class="left_input_div">
                <input type="password" class="form-control" id="passwordConfirm" name="passwordConfirm" placeholder="Confirm Password" required>
            </div>

            <!-- Country -->
            <div class="left_input_div">
                <select class="form-control" id="country" name="country" required>
                    <option value="">Select Country</option>
                    <!-- JS will insert countries -->
                </select>
            </div>

            <!-- Agree to terms -->
            <div class="checkbox_div">
                <label class="checkbox_label">
                    <input type="checkbox" id="agree" name="agree" required>
                    I agree to the <a href="/terms" target="_blank">terms and conditions</a>
                </label>
            </div>

            <!-- Sign In Redirect -->
            <div class="div_bottom">
                <h6>Already have an account? <a href="/login">Sign in</a></h6>
            </div>

            <!-- Submit -->
            <button type="submit" class="btn btn-primary">Continue</button>
        </form>
   
    </div>

    <div class="right">
        <img class="div_img" src="/images/1636690539-alfons-morales-YLSwjSy7stw-unsplash-2.jpg" alt="">
    </div>
</div>

<!-- Display the message if it exists -->
{{#if message}}
<div class="alert alert-danger">
    <h4>{{message}}</h4>
</div>
{{/if}}
